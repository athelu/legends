    {{!-- Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      <div class="features-layout">
        {{!-- Feats --}}
        <div class="feature-section">
          <div class="inventory-header">
            <h3>Feats</h3>
            <button type="button" data-action="openCompendium" data-type="feat" title="Add from Compendium">
              <i class="fas fa-atlas"></i> Add Feat
            </button>
          </div>
          <ol class="items-list feat-list">
            {{#each feats as |item id|}}
            <li class="item-collapsible" data-item-id="{{item._id}}">
              
              {{!-- Item Header (Always Visible, Clickable) --}}
              <div class="item-header" data-action="expandItem">
                <i class="item-caret fas fa-caret-right"></i>
                <div class="item-image">
                  <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </div>
                <h4 class="item-name">{{item.name}}</h4>
                <div class="item-controls">
                  <a class="item-control" data-action="itemView" title="View"><i class="fas fa-eye"></i></a>
                  <a class="item-control" data-action="itemEdit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-control" data-action="itemDelete" title="Delete"><i class="fas fa-trash"></i></a>
                </div>
              </div>
              
              {{!-- Collapsible Content (Dynamic Loading) --}}
              <div class="item-summary">
                {{!-- Content dynamically loaded --}}
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        {{!-- Traits --}}
        <div class="feature-section">
          <div class="inventory-header">
            <h3>Traits</h3>
            <button type="button" data-action="openCompendium" data-type="trait" title="Add from Compendium">
              <i class="fas fa-atlas"></i> Add Trait
            </button>
          </div>
          <ol class="items-list trait-list">
            {{#each traits as |item id|}}
            <li class="item-collapsible" data-item-id="{{item._id}}">
              
              {{!-- Item Header (Always Visible, Clickable) --}}
              <div class="item-header" data-action="expandItem">
                <i class="item-caret fas fa-caret-right"></i>
                <div class="item-image">
                  <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </div>
                <h4 class="item-name">{{item.name}}</h4>
                <div class="item-controls">
                  <a class="item-control" data-action="itemView" title="View"><i class="fas fa-eye"></i></a>
                  <a class="item-control" data-action="itemEdit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-control" data-action="itemDelete" title="Delete"><i class="fas fa-trash"></i></a>
                </div>
              </div>
              
              {{!-- Collapsible Content (Dynamic Loading) --}}
              <div class="item-summary">
                {{!-- Content dynamically loaded --}}
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        {{!-- Flaws --}}
        <div class="feature-section">
          <div class="inventory-header">
            <h3>Flaws</h3>
            <button type="button" data-action="openCompendium" data-type="flaw" title="Add from Compendium">
              <i class="fas fa-atlas"></i> Add Flaw
            </button>
          </div>
          <ol class="items-list flaw-list">
            {{#each flaws as |item id|}}
            <li class="item-collapsible" data-item-id="{{item._id}}">
              
              {{!-- Item Header (Always Visible, Clickable) --}}
              <div class="item-header" data-action="expandItem">
                <i class="item-caret fas fa-caret-right"></i>
                <div class="item-image">
                  <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </div>
                <h4 class="item-name">{{item.name}}</h4>
                <div class="item-controls">
                  <a class="item-control" data-action="itemView" title="View"><i class="fas fa-eye"></i></a>
                  <a class="item-control" data-action="itemEdit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-control" data-action="itemDelete" title="Delete"><i class="fas fa-trash"></i></a>
                </div>
              </div>
              
              {{!-- Collapsible Content (Dynamic Loading) --}}
              <div class="item-summary">
                {{!-- Content dynamically loaded --}}
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      <div class="conditions-section">
        <div class="inventory-header">
          <h3>Conditions</h3>
          <button type="button" data-action="openCompendium" data-type="condition" title="Add Condition">
            <i class="fas fa-plus"></i> Add Condition
          </button>
        </div>

        {{#if (hasItems conditions)}}
        <div class="conditions-list">
          {{#each conditions as |item id|}}
          <div class="condition-item item" data-item-id="{{item._id}}">
            <img class="condition-icon" src="{{item.img}}" title="{{item.name}}"/>
            <span class="condition-name">{{item.name}}</span>
            {{#if item.system.severity}}
            <span class="condition-severity">{{capitalize item.system.severity}}</span>
            {{/if}}
            <div class="item-controls">
              <a class="item-control" data-action="itemChat" title="Post to Chat"><i class="fas fa-comment"></i></a>
              <button type="button" data-action="conditionRemove" data-condition-name="{{item.name}}" title="Remove Condition">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <p class="no-items">No active conditions.</p>
        {{/if}}
      </div>
    </div>

    {{!-- Equipment Tab --}}
    <div class="tab equipment" data-group="primary" data-tab="equipment">
      {{!-- Armor Section --}}
      <div class="inventory-header">
        <h3>Armor</h3>
        <button type="button" data-action="openCompendium" data-type="armor" title="Add from Compendium">
          <i class="fas fa-atlas"></i> Add Armor
        </button>
      </div>
      <ol class="items-list armor-list">
        <li class="items-header">
          <div class="item-image"></div>
          <div class="item-name">Name</div>
          <div class="item-dr">DR</div>
          <div class="item-penalty">Penalty</div>
          <div class="item-controls">Actions</div>
        </li>
        
        {{#each armor as |item id|}}
        <li class="item-collapsible" data-item-id="{{item._id}}">
          
          {{!-- Item Header (Always Visible, Clickable) --}}
          <div class="item-header" data-action="expandItem">
            <i class="item-caret fas fa-caret-right"></i>
            <div class="item-image">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
            </div>
            
            <h4 class="item-name">{{item.name}}</h4>
            
            <div class="item-dr">
              {{#if item.system.dr.slashing}}
                S:{{item.system.dr.slashing}} P:{{item.system.dr.piercing}} B:{{item.system.dr.bludgeoning}}
              {{else}}
                {{item.system.dr.value}}
              {{/if}}
            </div>
            
            <div class="item-penalty">{{item.system.stealthPenalty}}</div>
            
            <div class="item-controls">
              <a class="item-control {{#if item.system.equipped}}equipped{{/if}}" data-action="itemEquip" 
                title="{{#if item.system.equipped}}Equipped{{else}}Not Equipped{{/if}}">
                <i class="fas fa-shield-alt"></i>
              </a>
              <a class="item-control" data-action="itemEdit" title="Edit"><i class="fas fa-edit"></i></a>
              <a class="item-control" data-action="itemDelete" title="Delete"><i class="fas fa-trash"></i></a>
            </div>
          </div>
          
          {{!-- Collapsible Content (Dynamic Loading) --}}
          <div class="item-summary">
            {{!-- Content will be generated dynamically by JavaScript --}}
          </div>
          
        </li>
        {{/each}}
      </ol>

      {{!-- Other Equipment Section --}}
      <div class="inventory-header">
        <h3>Equipment</h3>
        <button type="button" data-action="openCompendium" data-type="equipment" title="Add from Compendium">
          <i class="fas fa-atlas"></i> Add Equipment
        </button>
      </div>
      <ol class="items-list equipment-list">
        <li class="items-header">
          <div class="item-image"></div>
          <div class="item-name">Name</div>
          <div class="item-quantity">Qty</div>
          <div class="item-controls">Actions</div>
        </li>
        
        {{#each equipment as |item id|}}
        <li class="item-collapsible" data-item-id="{{item._id}}">
          
          {{!-- Item Header (Always Visible, Clickable) --}}
          <div class="item-header" data-action="expandItem">
            <i class="item-caret fas fa-caret-right"></i>
            <div class="item-image">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
            </div>
            
            <h4 class="item-name">{{item.name}}</h4>
            
            <div class="item-quantity">
              <input type="number" 
                     name="items.{{item._id}}.system.quantity" 
                     value="{{item.system.quantity}}" 
                     data-dtype="Number" 
                     min="0"
                     style="width: 60px !important; max-width: 60px !important; padding: 3px 6px !important; text-align: center !important; border: 1px solid #cbd5e0 !important; border-radius: 3px !important; background: white !important; font-weight: bold !important; color: #2d3748 !important; font-size: 13px !important; box-shadow: none !important; height: auto !important;"
                     onclick="event.stopPropagation()"/>
            </div>
            
            <div class="item-controls">
              <a class="item-control" data-action="itemChat" title="Post to Chat"><i class="fas fa-comment"></i></a>
              <a class="item-control" data-action="itemEdit" title="Edit"><i class="fas fa-edit"></i></a>
              <a class="item-control" data-action="itemDelete" title="Delete"><i class="fas fa-trash"></i></a>
            </div>
          </div>
          
          {{!-- Collapsible Content (Dynamic Loading) --}}
          <div class="item-summary">
            {{!-- Content will be generated dynamically by JavaScript --}}
          </div>
          
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      {{editor enrichedBiography target="system.biography.value" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
