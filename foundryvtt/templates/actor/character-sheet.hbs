    {{!-- Magic Tab --}}
    {{#if system.energy}}
    <div class="tab magic" data-group="primary" data-tab="magic">
      
      {{!-- Magical Trait Setup Section --}}
      {{#if system.magicalTrait.type}}
      <div class="magical-trait-section">
        <h3>Magical Powers</h3>
        
        {{#if system.magicalTrait.isSetup}}
          {{!-- Magical trait is configured - show stats --}}
          <div class="magic-stats-display">
            {{!-- Combined Potentials and Mastery Display --}}
            <div class="energy-header">
              <h4>Magical Energies</h4>
              <div class="magic-stats-inline">
                {{#if system.castingStat.displayLabel}}
                <div class="casting-stat-inline">
                  <label>Casting Stat:</label>
                  <span>{{system.castingStat.displayLabel}} {{system.castingStat.displayValue}}</span>
                </div>
                {{/if}}
                {{#if system.energy}}
                <div class="channel-uses">
                  <label>Energy:</label>
                  <input type="number" name="system.energy.value" 
                         value="{{system.energy.value}}" data-dtype="Number" 
                         class="uses-input" min="0" max="{{system.energy.max}}"/>
                  <span class="sep">/</span>
                  <span class="max-value">{{system.energy.max}}</span>
                </div>
                {{/if}}
                {{#if system.channelDivinity.max}}
                <div class="channel-uses">
                  <label>Channel Divinity:</label>
                  <input type="number" name="system.channelDivinity.current" 
                         value="{{system.channelDivinity.current}}" data-dtype="Number" 
                         class="uses-input" min="0" max="{{system.channelDivinity.max}}"/>
                  <span class="sep">/</span>
                  <span class="max-value">{{system.channelDivinity.max}}</span>
                </div>
                {{/if}}
              </div>
            </div>
            
            <div class="energy-potentials-grid">
              {{#each system.potentials as |potential key|}}
              <div class="energy-row">
                <label class="energy-label">{{potential.label}}</label>
                <div class="energy-values">
                  <input type="number" name="system.mastery.{{key}}.value" 
                         value="{{lookup (lookup ../system.mastery key) 'value'}}" data-dtype="Number" 
                         min="0" max="10" class="energy-input" title="Mastery"
                         placeholder="0"/>
                  <span class="separator">/</span>
                  <input type="number" name="system.potentials.{{key}}.value" 
                         value="{{potential.value}}" data-dtype="Number" 
                         min="0" max="10" class="energy-input" title="Potential"
                         placeholder="0"/>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        {{else}}
          {{!-- Magical trait needs setup --}}
          <div class="magic-setup-required">
            <div class="setup-info">
              <h4>üåü Magical Trait Setup Required</h4>
              <p>You have selected a magical trait that needs configuration.</p>
              
              <div class="trait-preview">
                <strong>Primary Trait:</strong> 
                <span class="trait-name">{{magicalTraitDisplayName}}</span>
              </div>
              
              {{#if hasGiftedMage}}
              <div class="modifier-badge gifted">
                ‚ú® <strong>Gifted Mage</strong> - Will roll 9d8 and drop lowest
              </div>
              {{/if}}
              
              {{#if hasBalancedChanneler}}
              <div class="modifier-badge balanced">
                ‚öñÔ∏è <strong>Balanced Channeler</strong> - Will use fixed array
              </div>
              {{/if}}
              
              <p class="setup-instructions">
                Click the button below to begin the guided setup process. 
                You will choose your affinities, roll for potentials, and configure your magical abilities.
              </p>
              
              <button type="button" class="setup-magical-traits-btn" data-action="setupMagicalTraits">
                <i class="fas fa-magic"></i> Begin Magical Trait Setup
              </button>
            </div>
          </div>
        {{/if}}
      </div>
      {{/if}}
      
      <div class="inventory-header">
        <h3>Weaves</h3>
        <button type="button" data-action="openCompendium" data-type="weave" title="Add from Compendium">
          <i class="fas fa-atlas"></i> Add Weave
        </button>
      </div>
      
      {{!-- Weaves List --}}
      <ol class="items-list weave-list">
        <li class="items-header">
          <div class="item-image">Icon</div>
          <div class="item-name">Name</div>
          <div class="energy-display">Primary</div>
          <div class="energy-display">Supporting</div>
          <div class="item-detail">Total</div>
          <div class="item-controls">Actions</div>
        </li>
        {{#each weaves as |item id|}}
        <li class="item-collapsible" data-item-id="{{item._id}}">
          
          {{!-- Item Header (Always Visible, Clickable) --}}
          <div class="item-header" data-action="expandItem">
            <i class="item-caret fas fa-caret-right"></i>
            <div class="item-image">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
            </div>
            
            {{!-- Weave Info Container --}}
            <div class="weave-info">
              <span class="item-name-clickable">{{item.name}}</span>
              <div class="weave-meta">
                {{#if item.system.weaveType}}
                  <span class="weave-type">{{item.system.weaveType}}</span>
                {{/if}}
                {{#if item.system.actionCost}}
                  <span class="weave-cost">[{{item.system.actionCost}} actions]</span>
                {{/if}}
              </div>
            </div>
            
            {{!-- Primary Energy --}}
            <div class="energy-display">
              {{#if item.system.energyCost.primary.type}}
                <img src="systems/legends/ui/energy-{{item.system.energyCost.primary.type}}.png" 
                     width="16" height="16" title="{{capitalize item.system.energyCost.primary.type}}"/>
                {{item.system.energyCost.primary.cost}}
              {{else}}‚Äî{{/if}}
            </div>
            
            {{!-- Supporting Energy --}}
            <div class="energy-display">
              {{#if item.system.energyCost.supporting.type}}
                <img src="systems/legends/ui/energy-{{item.system.energyCost.supporting.type}}.png" 
                     width="16" height="16" title="{{capitalize item.system.energyCost.supporting.type}}"/>
                {{item.system.energyCost.supporting.cost}}
              {{else}}‚Äî{{/if}}
            </div>
            
            {{!-- Total Cost --}}
            <div class="item-detail weave-total-cost">
              {{#if item.system.totalEnergyCost}}
                {{item.system.totalEnergyCost}}
              {{else}}
                {{add item.system.energyCost.primary.cost item.system.energyCost.supporting.cost}}
              {{/if}}
            </div>
            
            {{!-- Item Controls --}}
            <div class="item-controls">
              <a class="item-control" data-action="itemRoll" title="Cast Weave"><i class="fas fa-dice-d8"></i></a>
              <a class="item-control" data-action="itemChat" title="Post to Chat"><i class="fas fa-comment"></i></a>
